{% extends "base.html.twig" %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<h1>Bienvenue sur la page d'accueil</h1>

	<div class="row">

		<div class="col-md-8">
			{% for article in articles %}

				<div class="card col-md-4" style="width: 18rem;">
					<img class="card-img-top" src="/assets/blog/images/{{ article.image }}" alt="{{article.title}}">
					<div class="card-body">
						<h5 class="card-title">{{article.title}}</h5>
						<a href="{{path('show', {'id':article.id})}}" class="btn btn-primary">En savoir plus</a>

						{# A ajouter aprés article.createdAt pour convertir la date au bon format :         | date("d/m/Y")          #}
						{# A ajouter aprés article.createdAt pour convertir l'heure au bon format :         | date("H:i")            #}

						<div class="card-footer">
							<p class="date">
								Ecrit le
								{{article.createdAt | date("d/m/Y")}}

								par
								<span class="author">
									{{article.author}}
								</span>
								<h2 class="title">{{article.title}}</h2>
							</p>
						</div>

					</div>

				</div>


			{% endfor %}

		</div>

		<div class="col-md-4">
			<h2>Categories</h2>
			<ul class="list-group">
				{% for category in categories %}
					<li class="list-group-item">
						<a href="{{path('show_article', {'id':category.id})}}">
							{{category.title}}
							<span class="badge badge-primary badge-pill color-primary">
								{{category.articles | length}}
								article(s)</span>
						</a>
					</li>
				{% endfor %}
			</ul>
		</div>

	</div>


{% endblock %}
